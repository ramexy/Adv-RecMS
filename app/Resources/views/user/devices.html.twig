{% extends 'base.html.twig' %}
{% block body %}
    {#r row for the header content#}
    {% include 'admin/includes/header.twig' %}
    <div class="container-fluid">
        <div class="row">
            {% include'admin/includes/side-nav.twig' %}
            <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
                <h5>EFD STOCK DISTRIBUTION &nbsp; &nbsp; &nbsp; <a  href="#" type="link" class="btn btn-outline-primary btn-sm">Add New Device</a></h5>
                {#<div>#}
                    {#<form action="" method="get">#}
                        {#<input name="filter" placeholder="Enter name or serial number" type="text" id="filter-box">#}
                        {#<button type="submit" class="btn btn-outline-primary btn-sm">Filter now</button>#}
                    {#</form>#}
                {#</div><br>#}
                <div class="table-hover">
                    <table class="table  table-striped table-sm">
                        <thead>
                        <tr>
                            <td>#</td>
                            <th class="bg-light">SN</th>
                            <th class="bg-light">CUSTOMER NAME</th>
                            <th class="bg-light">TIN</th>
                            <th class="bg-light">PHONE</th>
                            <th CLASS="bg-light">OPERATIONS</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for device in devices %}
                            <tr>
                                <td>{{ device.id }}</td>
                                <td>{{ device.SN }}</td>
                                <td>{{ device.customerName }}</td>
                                <td>{{ device.tin }}</td>
                                <td>{{ device.telephone }}</td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-info"><i class="fa fa-wrench"></i>&nbsp;actions</button>
                                        <div class="dropdown-content">
                                            <a href="#" class="btn-info btn-sm"><i class="fa fa-list"></i>&nbsp;Full info</a>
                                            <a href="#" class="btn-sm"><i class="fa fa-edit"></i>&nbsp;Edit</a>
                                            <a href="#" class="btn-danger btn-sm"><i class="fa fa-trash-alt"></i>&nbsp;Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="navigation text-center">
                        {{ knp_pagination_render(devices) }}
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}