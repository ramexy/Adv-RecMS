{% extends 'base.html.twig' %}
{% block body %}
    {#r row for the header content#}
    {% include 'admin/includes/header.twig' %}
    <div class="container-fluid">
        <div class="row">
            {% include'admin/includes/side-nav.twig' %}
            <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
                <h5>New Staff Registration Form &nbsp; &nbsp; &nbsp; <button  href="#" type="button" class="btn btn-outline-primary btn-sm">List Staff</button></h5>
                {{ form_start(form) }}
                    {{ form_row(form.fullname) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.password) }}
                    {{ form_row(form.phone) }}
                    {{ form_row(form.position) }}
                <button type="submit">Register!</button>
                {{ form_end(form) }}
            </main>
        </div>
    </div>
{% endblock %}