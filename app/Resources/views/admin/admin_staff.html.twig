{% extends 'base.html.twig' %}
{% block body %}
        {#r row for the header content#}
        {% include 'admin/includes/header.twig' %}
            <div class="container-fluid">
            <div class="row">
                {% include'admin/includes/side-nav.twig' %}
                <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
                    <h5>Advatech Staff &nbsp; &nbsp; &nbsp; <a  href="{{ path('user_registration') }}" type="link" class="btn btn-outline-primary btn-sm">Add New Staff</a></h5>
                    <div class="table-responsive">
                        <table class="table  table-striped table-sm">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th class="bg-light">Full name</th>
                                <th class="bg-light">Username</th>
                                <th class="bg-light">Email</th>
                                <th class="bg-light">Phone</th>
                                <th class="bg-light">Position</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for staff in staffs %}
                            <tr>
                                <td>{{ staff.id }}</td>
                                <td>{{ staff.username }}</td>
                                <td>{{ staff.fullname }}</td>
                                <td>{{ staff.email }}</td>
                                <td>{{ staff.phone }}</td>
                                <td>{{ staff.position }}</td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </main>
            </div>
            </div>
{% endblock %}